{
  "private": true,
  "name": "typorama",
  "version": "0.0.5",
  "description": "",
  "main": "dist/src",
  "repository": {
    "type": "git",
    "url": "wix/typorama"
  },
  "scripts": {
    "watch": "babel -w ./src/ -d ./dist/src/ --modules umd --source-maps",
    "build": "babel ./src/ -d ./dist/src/ --modules umd --source-maps",
    "buildtestkit": "babel ./test-kit/ -d ./dist/test-kit/ --modules umd --source-maps",
    "test": "mocha --compilers js:babel/register --reporter nyan",
    "webtest": "webpack-dev-server --progress --hot --inline --no-colors",
    "webbuild": "webpack --progress -p --colors",
    "prepublish": "npm run build",
    "prebuild": "npm run test",
	"release-minor": "npm run build && git add ./dist && git commit -m rebuild && npm version minor && git push"
  },
  "author": "core3",
  "license": "c",
  "devDependencies": {
    "babel": "^4.7.16",
    "babel-core": "^4.7.16",
    "babel-loader": "^4.2.0",
    "babel-runtime": "^4.7.16",
    "bluebird": "^2.9.14",
    "chai": "^2.1.2",
    "immutable": "^3.6.4",
    "mocha": "^2.2.1",
    "mocha-loader": "^0.7.1",
    "react": "^0.13.1",
    "webpack": "^1.7.3",
    "webpack-dev-server": "^1.7.0"
  },
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "lodash": "^3.5.0"
  }
}
